<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_match_parent"
    android:paddingBottom="@dimen/d_8dp"
    android:layout_width="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/d_120dp"
        android:layout_height="@dimen/d_100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/temp_goods" />


    <TextView
        style="@style/text14colorRed"
        android:layout_marginTop="@dimen/d_2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/d_5dp"
        android:paddingRight="@dimen/d_5dp"
        android:paddingTop="@dimen/d_5dp"
        android:text="￥558.00" />

    <TextView
        android:id="@+id/price_sub_tv"
        style="@style/text12color999"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/d_5dp"
        android:paddingRight="@dimen/d_5dp"
        android:text="￥1558.00" />


</LinearLayout>
