<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_bottom_h"
    android:padding="10dp">


    <ImageView
        android:id="@+id/select_iv"
        style="@style/text"
        android:layout_marginRight="@dimen/d_10dp"
        android:src="@mipmap/choose_off" />

    <ImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/d_100dp"
        android:layout_height="@dimen/d_100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            style="@style/text"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/specifications_tv"
            style="@style/text"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/app_name" />

        <LinearLayout style="@style/ll_bottom_h_no">

            <TextView
                android:id="@+id/price_tv"
                style="@style/text_weight"
                android:text="@string/price_sub"
                android:textColor="@color/colorAccent" />

            <include layout="@layout/include_goods_num_change" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
